{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "es6" ],
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [ "node_modules", "dist" ]
}